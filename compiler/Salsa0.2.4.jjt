CLiteral BooleanLiteral() : {
    CLiteral literal = new CLiteral();
    literal.type = "boolean";
    Token t;
} {
    (
          t = "true"
        | t = "false"
    )                    { literal.value = t.image; }

   {
      literal.initLineAndColumn(t);
       return literal;
   }
}

CLiteral NullLiteral() : {
    CLiteral literal = new CLiteral();
    literal.type = "null";
   Token t;
} {
    t = "null"                    { literal.value = "null"; }

   {
      literal.initLineAndColumn(t);
