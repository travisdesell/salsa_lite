   }
}

CLiteral AcknowledgementLiteral() : {
    CLiteral literal = new CLiteral();
    literal.type = "ack";
   Token t;
} {
    t = "ack"                    { literal.value = "ack"; }

   {
      literal.initLineAndColumn(t);
       return literal;
   }
}

String AssignmentOperator() : {
    Token t;
} {
    (
          t = "="
        | t = "*="
        | t = "/="
        | t = "%="
        | t = "+="
        | t = "-="
        | t = "<<="
        | t = ">>="
        | t = ">>>="
        | t = "&="
        | t = "^="
        | t = "|="
    )

    { return t.image; }
}

String Operator() : {
    Token t;
} {
    (
          t = "||"
        | t = "&&"
        | t = "|"
        | t = "^"
        | t = "&"
        | t = "=="
        | t = "!="
        | t = ">"
        | t = "<"
        | t = "<="
        | t = ">="
        | t = "<<"
        | t = ">>"
        | t = ">>>"
        | t = "+"
        | t = "-"
        | t = "*"
        | t = "/"
        | t = "%"
        | t = "instanceof"
    )

    { return t.image; }
}

